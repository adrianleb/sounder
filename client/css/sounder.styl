@import "normalizer"
/* CSS declarations go here */
html
  font-size 62.5%
  display block
  height 100%

body
  display block
  font-size 1.6rem
  width 100%
  min-height 100%
  height 100%
  background-size cover
  text-align center
  // -webkit-trasition all 0.5s ease-out

h1 {
  margin 0
}
.drop_area
  background-color lightgrey
  position absolute
  bottom 3rem
  width 100%
  height 4rem
  text-align center
  box-sizing border-box
  display block
  margin 0 auto
  padding 0.5rem 0 0 0
  // margin-bottom 2rem
  border-radius 0.4rem
  label
    line-height 1.6
    font-size 2rem
    font-weight 600
  input
    width 60%
    height 3rem
    border none
    vertical-align top
    font-size 2rem
    font-weight bold
    border-radius 0.4rem 0 0 0.4rem
    box-sizing border-box
    padding 0.2rem 1rem
  button
    width 10%
    height 3rem
    margin none
    border none
    background-color lightblue
    display inline-block
    vertical-align top
    border-radius 0 0.4rem 0.4rem 0



audio
  width 100%
  background-color black
  position absolute
  bottom 0

.player 
  position absolute
  bottom 0 
  width 100%
  left 0
  display block
  background-color black
  height 3rem

  .volume
    background-color white
    display inline-block
    padding 0 1rem
    position absolute
    left 0.5rem
    top 0.5rem

  .play, .pause 
    background-color lighten(black, 40%)
    color white
    margin-left 2.5%
    border-radius 0.4rem
    width 5%
    height 2rem
    font-size 1.2rem
    border none
    position: absolute
    left 15rem
    top 0.5rem
  .pause
    left 22rem

  .progress
    display inline-block
    height 2rem
    width 60%
    position absolute
    left 36rem
    top 0.5rem


    progress
      width 100%
      height 2rem
      display block
      border none





