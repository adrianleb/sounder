.controls
  position absolute
  display block
  width 100%
  height 10rem
  top 0
  left 0
  background-color darken(white, 5%)
  -webkit-transition all 0.25s ease-out 0.01s
  -webkit-transform translate3d(0,-10rem,0)
  box-shadow inset 0 -2px  rgba(black, 0.2)

  .opener
    width 6rem
    height 2.3rem
    background-color darken(white, 5%)
    display block
    position absolute
    line-height 1.5
    right 0.5rem
    bottom 0
    margin-bottom -3rem
    // margin-left -3rem
    // box-shadow inset -2px 0 1rem rgba(white, 0.5)
    box-shadow 0 0px 2px rgba(black, 0.5)
    color black
    text-decoration none
    color darken(white, 10%)
    border-radius 0.4rem
    text-shadow 0 -1px 0 rgba(black, 0.2),0 1px 0 rgba(white, 0.2)
    -webkit-transform translate3d(0,0rem,0)
    -webkit-transition all 0.25s ease-out 0.01s

.controls.open
  -webkit-transform translate3d(0,0,0)
  .opener
    -webkit-transform translate3d(0,-5rem,0)
    background-color lighten(lightblue, 30%)
    color lighten(blue, 20%)



.playlist
  width 100%
  height 3rem
  text-align left
  box-shadow inset 0 0 2px rgba(black, 0.3)
  box-sizing border-box
  padding 0.5rem 0.5rem 0

  a 
   display inline-block
   margin-right 0.5rem

.inputter
  text-align left
  position relative
  width 50%
  height 3rem
  margin 0.5rem 0 0 0.5rem
  -webkit-transition all 0.25s ease-out 0.01s
  -webkit-transform translate3d(-110%,0,0)
  z-index 3
  // background-color red

  label
    width 20%
    box-sizing border-box
    height 100%
    display inline-block
    border-radius 0.4rem 0 0 0.4rem
    border 1px solid rgba(black, 0.2)
    border-right-color transparent
    vertical-align top
    text-align center
    line-height 1.75
    background-color darken(white, 15%)
  input
    box-sizing border-box
    width 80%
    border none
    margin 0
    padding 0 0.5rem 0
    padding-right 8.5rem
    display inline-block
    height 100%
    border-radius 0.1rem 0.4rem  0.4rem 0
    border 1px solid rgba(black, 0.2)
    // border-right-color transparent
    border-left-width 0
    line-height 2


  button
    position absolute
    right 0.4rem
    box-sizing border-box
    width 8rem
    height 2.2rem
    top 0.4rem
    border none
    padding 0
    margin 0
    display inline-block
    border-radius 0.4rem
    border 1px solid rgba(black, 0.2)
    border-left-color transparent

.inputter.open
  -webkit-transform translate3d(0,0,0)

.inputOpener
  position absolute
  top 4rem
  left 2rem
  color black
  text-decoration none